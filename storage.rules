rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. This is necessary for images to be
    // displayed in the app to any user.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to their own folder in 'user-uploads'.
    // This is for profile pictures, publication images, etc.
    match /user-uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
