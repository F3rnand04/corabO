rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. 
    // This is necessary for others to see profile pictures and publication images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // --- User Profile Images ---
    // A user can only write (upload, update, delete) to their own profile image path.
    // The path is structured as 'users/{userId}/profile/{fileName}'.
    match /users/{userId}/profile/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Publication Media ---
    // A user can only write to their own publication media path.
    // Path: 'publications/{userId}/{publicationId}/{fileName}'
     match /publications/{userId}/{publicationId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Payment Vouchers ---
    // A user can only write to their own voucher path for a specific transaction.
    // Path: 'vouchers/{userId}/{transactionId}/{fileName}'
    match /vouchers/{userId}/{transactionId}/{fileName} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- ID Documents ---
    // A user can only write to their own ID document path.
    match /id-documents/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
