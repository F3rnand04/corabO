rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Allow public read access to all files. 
    // This is necessary for profile pictures, publication images, etc. to be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own designated folder.
    // Example path: /users/USER_ID/profile_picture.jpg
    match /users/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to write publication images to their folder.
    // Example path: /publications/USER_ID/image.jpg
    match /publications/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
