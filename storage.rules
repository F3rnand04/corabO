rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary for images to be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }
    
    // User can only write to their own folder.
    // Example path: /users/{userId}/profile.jpg
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Publications can be written by authenticated users to their own folders.
    // Example path: /publications/{userId}/{publicationId}.jpg
    match /publications/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
