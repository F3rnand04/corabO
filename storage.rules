rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for all files.
    match /{allPaths=**} {
      allow read;
    }

    // User can only write to their own folder (e.g., /users/{userId}/profile.jpg)
    // or to a publications folder they own.
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /publications/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /vouchers/{userId}/{allPaths=**} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
