
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // All files are publicly readable
    match /{allPaths=**} {
      allow read;
    }

    // User can only write to their own folder within 'user_uploads'
    match /user_uploads/{userId}/{fileName} {
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Allow writes to a 'vouchers' folder for authenticated users
    match /vouchers/{userId}/{fileName} {
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Allow writes to an 'id_documents' folder only for the specific user
    match /id_documents/{userId}/{fileName} {
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
