rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is necessary for images to be displayed in the app.
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Users can only write to their own folder within 'user-uploads'.
    // The path should look like: /user-uploads/{userId}/<fileName>
    match /user-uploads/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
