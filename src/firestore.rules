
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT ONLY: This rule is insecure and should be changed for production.
    // It allows any user to read/write to any document.
    // This is temporarily necessary to bypass emulator permission issues.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
