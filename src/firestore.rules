rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla permisiva para entornos de desarrollo y pruebas.
    // PERMITE todas las lecturas y escrituras si el usuario está autenticado.
    // ADVERTENCIA: NO USAR EN PRODUCCIÓN sin reglas de seguridad detalladas.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
