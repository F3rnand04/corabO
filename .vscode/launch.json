{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Run and Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "envFile": "${workspaceFolder}/.env.local",
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "port": 9229,
      "sourceMaps": true,
      "protocol": "inspector",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "smartStep": true,
      "serverReadyAction": {
        "pattern": "started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ]
}