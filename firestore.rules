rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY PUBLIC ACCESS FOR TESTING
    // This allows anyone to read and write to any collection.
    // This is NOT secure for production.
    match /{document=**} {
      allow read, write: if true;
    }

    // Allow authorized users to call backend flows
    // This rule is open for development purposes.
    match /flows/{flowName} {
      allow call: if true;
    }
  }
}
