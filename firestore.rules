rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla de desarrollo: Permite leer/escribir a cualquier usuario autenticado en toda la base de datos.
    // Esto es permisivo para facilitar el desarrollo, pero deberá ser ajustado con reglas
    // más específicas para producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
