rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla permisiva para desarrollo: Permite leer/escribir si el usuario está autenticado.
    // ADVERTENCIA: estas reglas deben ser más específicas para producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
