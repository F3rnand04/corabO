
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // FORENSIC FIX: This rule allows any authenticated user to read/write to any document.
    // This is suitable for development but should be replaced with more granular rules for production.
    // The `{document=**}` wildcard ensures the rule applies to all collections and subcollections.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

    