
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- REGLAS GENERALES ---
    // Cualquiera puede leer la información pública de los usuarios y las publicaciones
    match /users/{userId} {
      allow read; 
      // Solo el usuario autenticado y dueño del perfil puede escribir en su propio documento.
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Cualquiera puede leer la galería de un usuario
      match /gallery/{imageId} {
        allow read;
        // Solo el dueño del perfil puede escribir en su galería
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Cualquiera puede leer las publicaciones públicas del feed.
    match /publications/{publicationId} {
      allow read;
      // Solo el backend (o un usuario autenticado que coincida con el providerId) puede crear o modificar publicaciones.
      // Esta es una regla simplificada; en producción sería más estricta (solo backend).
      allow write: if request.auth != null && request.resource.data.providerId == request.auth.uid;
    }
    
    // Cualquiera puede leer productos.
    match /products/{productId} {
        allow read;
        // Solo el proveedor dueño del producto puede escribir
        allow write: if request.auth != null && request.resource.data.providerId == request.auth.uid;
    }

    // --- REGLAS DE TRANSACCIONES Y MENAJES (Más restrictivas) ---
    
    // Solo los participantes de una transacción pueden leer o escribir en ella.
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }
    
    // Solo los participantes de una conversación pueden leer o escribir en ella.
    match /conversations/{conversationId} {
       allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }
    
    // Los administradores tienen acceso a colecciones especiales
    match /campaigns/{campaignId} {
      // Cualquiera puede leer campañas activas (simplificado).
      allow read: if resource.data.status == 'active';
      // Solo el backend (simulado con usuario autenticado) puede escribir
      allow write: if request.auth != null; 
    }
    
    match /notifications/{notificationId} {
      // El usuario solo puede leer sus propias notificaciones
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      // Solo el backend (simulado con usuario autenticado) puede escribir
      allow write: if request.auth != null;
    }
  }
}
