
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas de desarrollo: Permite leer y escribir a cualquier usuario autenticado.
    // Esto es útil para prototipado rápido, pero debe ser asegurado antes de producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
