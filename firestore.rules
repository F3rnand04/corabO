
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Denegar todo por defecto para máxima seguridad
    match /{document=**} {
      allow read, write: if false;
    }

    // Permitir la lectura y escritura del perfil de usuario solo al propietario
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir a cualquiera leer publicaciones, pero solo al propietario escribirlas
    match /publications/{publicationId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && request.resource.data.providerId == request.auth.uid;
    }
    
    // Permitir acceso a transacciones solo a los participantes
    match /transactions/{transactionId} {
        allow read, write: if request.auth != null && request.resource.data.participantIds.hasAny([request.auth.uid]);
    }
    
    // Permitir acceso a conversaciones solo a los participantes
    match /conversations/{conversationId} {
        allow read, write: if request.auth != null && request.resource.data.participantIds.hasAny([request.auth.uid]);
    }

    // Permitir a cualquier usuario autenticado crear un reporte
    match /reports/{reportId} {
      allow create: if request.auth != null;
      // Solo los admins pueden leer o modificar reportes
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para colecciones de administración
    match /disputes/{disputeId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /campaigns/{campaignId} {
        allow read, write: if request.auth != null; // Simplificado por ahora
    }

    match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /affiliations/{affiliationId} {
        allow read, write: if request.auth != null; // Simplificado por ahora
    }

    match /qr_sessions/{sessionId} {
        allow read, write: if request.auth != null; // Simplificado por ahora
    }

    match /livestreams/{liveId} {
        allow read, write: if request.auth != null; // Simplificado por ahora
    }
  }
}
