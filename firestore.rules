
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla de desarrollo: Permite leer y escribir en cualquier documento
    // a cualquier usuario que esté autenticado.
    // Esto es permisivo para facilitar el desarrollo, pero deberá ser
    // ajustado con reglas más granulares para producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
