rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla de Desarrollo: Permite cualquier lectura o escritura a cualquier usuario autenticado.
    // Esto es permisivo para acelerar el desarrollo, pero debe restringirse para producci√≥n.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
