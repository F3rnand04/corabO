
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas permisivas para un entorno de desarrollo.
    // Permite la lectura y escritura a cualquier usuario que haya iniciado sesión.
    // ¡PRECAUCIÓN! No uses estas reglas en producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
