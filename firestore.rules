
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // REGLA DE DESARROLLO: Permite la lectura y escritura a cualquier usuario que esté autenticado.
    // Esto es necesario para que el entorno de desarrollo funcione correctamente.
    // Para producción, estas reglas deben ser más específicas y seguras.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
