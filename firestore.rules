
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla permisiva para desarrollo: permite leer/escribir a cualquier usuario autenticado.
    // IMPORTANTE: Ajustar estas reglas con mayor granularidad antes de pasar a producci√≥n.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
