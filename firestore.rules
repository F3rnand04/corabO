rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // REGLA DE DESARROLLO: Permite acceso público total para facilitar las pruebas.
    // Esto elimina cualquier error de "permisos insuficientes" durante la refactorización.
    // ¡IMPORTANTE! Se debe asegurar antes de pasar a producción.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
