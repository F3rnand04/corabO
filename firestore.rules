
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla de desarrollo: Permite leer y escribir a cualquier usuario autenticado.
    // Esto es permisivo y solo debe usarse en entornos de desarrollo.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
