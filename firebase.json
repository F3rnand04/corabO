{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "host": "127.0.0.1",
      "port": 8083
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9101
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4401
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4501
    },
    "ui": {
      "host": "127.0.0.1",
      "port": 4001
    }
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
